<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>ufpa.mestrado</groupId>
  <artifactId>dissertacao</artifactId>
  <version>1.0-SNAPSHOT</version>

  <properties>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <!-- JUnit 5 -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.9.3</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.9.3</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-params</artifactId>
      <version>5.9.3</version>
      <scope>test</scope>
    </dependency>

    <!-- Commons Lang -->
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>3.12.0</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>

      <!-- Surefire -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0-M9</version>
      </plugin>

      <!-- PIT -->
      <plugin>
        <groupId>org.pitest</groupId>
        <artifactId>pitest-maven</artifactId>
        <version>1.20.1</version>

        <dependencies>
          <dependency>
            <groupId>org.pitest</groupId>
            <artifactId>pitest-junit5-plugin</artifactId>
            <version>1.2.1</version>
          </dependency>
        </dependencies>

        <configuration>
          <testPlugin>junit5</testPlugin>

          <classesDirectory>${project.build.directory}/classes</classesDirectory>

          <!-- Classe alvo -->
          <targetClasses>
            <param>org.apache.commons.lang3.CharRange</param>
          </targetClasses>
          
<!--          <targetMethods>-->
<!--  				  <param>contains\\(Lorg/apache/commons/lang3/CharRange;\\)</param>-->
<!-- 				  </targetMethods>-->

					<excludedClasses>
						<param>org.apache.commons.lang3.CharRange\$CharacterIterator</param>
					</excludedClasses>

          <!-- Excluir TODOS os mÃ©todos fora do escopo -->
          <excludedMethods>
						<param>contains\\(C\\)</param> <!-- ESSENCIAL -->
						<param>equals</param>
						<excludedMethod>&lt;init&gt;</excludedMethod>
						<param>CharRange</param>
						<param>CharRange(char start, char end, final boolean negated)</param>
						<param>hashCode</param>
						<param>toString</param>
						<param>iterator</param>
						<param>getStart</param>
						<param>getEnd</param>
						<param>isNegated</param>
						<param>is</param>
						<param>isNot</param>
						<param>isIn</param>
						<param>isNotIn</param>
						<param>prepareNext</param>
						<param>next</param>
						<param>hasNext</param>
						<param>CharacterIterator</param>
					</excludedMethods>

          <!-- Testes apenas do pacote da classe -->
          <targetTests>
            <param>org.apache.commons.lang3.*</param>
          </targetTests>

          <outputFormats>
            <param>XML</param>
            <param>HTML</param>
            <param>CSV</param>
          </outputFormats>

          <historyOutputFile>
            ${project.build.directory}/pit-history/pitHistory.bin
          </historyOutputFile>

          <timestampedReports>false</timestampedReports>
        </configuration>

      </plugin>
    </plugins>
  </build>
</project>

